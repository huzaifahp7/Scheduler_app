<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@id/addAssignment"
        android:layout_height="wrap_content"
        android:padding = "16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dynamic day blocks -->
            <!-- Repeat this block for each day of the week -->
            <LinearLayout
                android:id="@+id/dayContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#DAE2F8"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="day tbd"
                    android:textSize="18sp"
                    android:textColor="#000080"
                    android:layout_marginBottom="8dp"/>

                <!-- Dynamic list of assignments for the day -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Repeat this TextView for each assignment -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assignment Details" />
                    <!-- Add more TextViews or a custom layout for each assignment -->

                </LinearLayout>
            </LinearLayout>
            <!-- End of day block -->
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addAssignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="325dp"
        android:layout_marginBottom="108dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add"/>

</RelativeLayout>

